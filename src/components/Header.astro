---
import { buttonVariants } from "@/components/ui/button";
import ThemeToggle from "@/components/ThemeToggle.astro";;
import { Icon } from 'astro-icon/components'
---
<header class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur">
    <div class="container hidden md:flex lg:flex h-16 items-center space-x-4">
        <div class="hidden md:flex lg:flex flex-1 items-center justify-center space-x-4 ">
            <nav class="flex items-center space-x-1">
                <a href="https://discord.gg/scuffed" target="_blank" rel="noreferrer" class={`inline-flex items-center justify-center gap-2 ${buttonVariants({ variant: 'ghost', size: 'sm' })}`}>
                    <Icon name="tabler:brand-discord" class="inline-flex items-center justify-center"/> Discord
                </a>
                <a href="https://github.com/hakkodev" target="_blank" rel="noreferrer" class={`inline-flex items-center justify-center gap-2 ${buttonVariants({ variant: 'ghost', size: 'sm' })}`}>
                    <Icon name="tabler:brand-github" class="inline-flex items-center justify-center"/> Github
                </a>
                <a href="https://linktr.ee/hakkolive" target="_blank" rel="noreferrer" class={`inline-flex items-center justify-center gap-2 ${buttonVariants({ variant: 'ghost', size: 'sm' })}`}>
                    <Icon name="tabler:brand-linktree" class="inline-flex items-center justify-center"/> Socials
                </a>
                <a href="https://ko-fi.com/hakko" target="_blank" rel="noreferrer" class={`inline-flex items-center justify-center gap-2 ${buttonVariants({ variant: 'ghost', size: 'sm' })}`}>
                    <Icon name="tabler:coffee" class="inline-flex items-center justify-center"/> Ko-Fi
                </a>
            </nav>
        </div>
        <ThemeToggle />
    </div>

    <div class="flex flex-row h-16 space-x-4 justify-between md:hidden lg:hidden">
        <div class="flex items-center space-x-1 ml-2">
            <a href="https://linktr.ee/hakkolive" target="_blank" rel="noreferrer" class={`inline-flex items-center justify-center gap-2 ${buttonVariants({ variant: 'outline', size: 'sm' })}`}>
                <Icon name="tabler:brand-linktree" class="inline-flex items-center justify-center"/> Socials
            </a>
        </div>
        <div class="flex items-center space-x-1 mr-2">
            <ThemeToggle />
        </div>
    </div>
</header>