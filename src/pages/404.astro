---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ErrorGif from '@/images/error.gif'
import { buttonVariants } from "@/components/ui/button";
import { Image } from 'astro:assets';
---

<BaseLayout title="404 - Not Found" description="404 Error â€” this page was not found">
    <div class="container mt-16 grid grid-cols-4 items-center justify-center px-8">
        <div class="col-span-2">
            <p class="text-muted-foreground text-base">Error 404</p>
            <h1 class="scroll-m-20 text-2xl font-extrabold tracking-tight lg:text-5xl">
                Page not found
            </h1>
            <p class="mb-4 leading-7 [&:not(:first-child)]:mt-6">
                The monkeys that run us ran into an issue!
            </p>
            <div class="flex flex-row gap-2">
                <a onclick="history.back()" class={`cursor-pointer inline-flex items-center justify-center ${buttonVariants()}`}>
                    Go Back
                </a>
                <a href="/" rel="noreferrer" class={`inline-flex items-center justify-center ${buttonVariants()}`}> 
                    Go Home
                </a>
            </div>
        </div>
        <Image alt="error" src={ErrorGif} class="mt-4 rounded-xl skeleton mb-2 col-span-2"/>
    </div>
</BaseLayout>